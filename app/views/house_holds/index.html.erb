<%- model_class = HouseHold -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr class>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @house_holds.each do |house_hold| %>
      <tr class="inherit_table_bg_color">
        <td class="table_text_allign"><%= house_hold.name %></td>
        <td class="table_text_allign"><%= house_hold.address %></td>
        <td class="table_text_allign">
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      house_hold_path(house_hold), :class => 'btn btn-default btn-xs ' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_house_hold_path(house_hold), :class => 'btn btn-default btn-xs ' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      house_hold_path(house_hold),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger table_text_allign' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_house_hold_path,
            :class => 'btn btn-primary' %>

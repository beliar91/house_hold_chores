<%= form_for @house_hold, :html => { :class => "form-horizontal house_hold" } do |f| %>

  <% if @house_hold.errors.any? %>
    <div id="error_expl" class="panel panel-danger error_panel_background">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@house_hold.errors.count, "error") %> prohibited this house_hold from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @house_hold.errors.full_messages.each do |msg| %>
          <li class="errors_list_color"><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                house_holds_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
